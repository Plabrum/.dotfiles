{
  "workbench.startupEditor": "none",
  "workbench.activityBar.location": "top",
  // "workbench.statusBar.visible": false,
  "window.density.editorTabHeight": "compact",
  "window.commandCenter": false,
  // "editor.folding": false,
  "editor.glyphMargin": true,
  "editor.minimap.enabled": false,
  // "eslint.format.enable": true,
  // "workbench.layoutControl.enabled": true,
  "editor.tabSize": 2,
  "window.newWindowProfile": "Default",
  "gitlens.views.contributors.avatars": false,
  "eslint.validate": ["typescript"],
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.formatOnSave": true,

  // Code Editing
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      // "source.fixAll": "explicit"
    }
  },
  "[html]": {},
  "[jsonc]": {},
  "notebook.output.textLineLimit": 400,
  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "colorize.languages": ["javascript", "typescript"],
  "colorize.colorized_colors": ["HEXA"],
  "workbench.editorAssociations": {
    "*.csv": "default"
  },
  "terminal.integrated.inheritEnv": false,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
    // "editor.formatOnSave": true
  },
  "python.defaultInterpreterPath": "/Users/phil/miniconda3/bin/python",
  "python.analysis.indexing": true,
  "python.analysis.autoImportCompletions": true,
  "jupyter.askForKernelRestart": false,
  "notebook.lineNumbers": "on",
  "editor.fontSize": 14,
  // "extensions.ignoreRecommendations": true,
  "githubPullRequests.pullBranch": "never",
  "explorer.confirmDragAndDrop": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "jest.runMode": "on-demand",

  "javascript.updateImportsOnFileMove.enabled": "always",
  "python.languageServer": "Pylance",
  "jupyter.enableExtendedPythonKernelCompletions": true,
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.autoFormatStrings": true,
  "notebook.defaultFormatter": "ms-python.black-formatter",
  "notebook.formatOnSave.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,

  // Theming
  "workbench.colorTheme": "Monokai",

  "githubPullRequests.fileListLayout": "flat",
  "workbench.sideBar.location": "right",
  "notebook.editorOptionsCustomizations": {
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": false
  },
  "shellcheck.customArgs": [
    "-a -x"
  ]
}
